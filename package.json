{
  "name": "dmx-laser-control",
  "version": "2.0.0",
  "description": "Professional DMX512 Laser Control System with Pattern Discovery",
  "type": "module",
  "main": "dmx.js",
  "bin": {
    "dmx": "./dmx-cli.js"
  },
  "scripts": {
    "start": "node dmx-cli.js control",
    "test": "npm run test:unit && npm run test:devices",
    "test:unit": "mocha test/unit/**/*.test.js",
    "test:integration": "mocha test/integration/**/*.test.js",
    "test:devices": "npm run test:ehaho",
    "test:ehaho": "node test/devices/ehaho-l2400.test.js",
    "test:ehaho:hardware": "node test/devices/ehaho-l2400.test.js --hardware",
    "discover": "node dmx-cli.js discover",
    "setup": "node dmx-cli.js setup",
    "control": "node dmx-cli.js control",
    "pattern-editor": "node pattern-editor-cli.js"
  },
  "keywords": ["dmx", "dmx512", "laser", "lighting", "control", "serial"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "serialport": "^13.0.0",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-table3": "^0.6.3",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}